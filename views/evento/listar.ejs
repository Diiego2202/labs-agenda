
<div class="row">
	<div class="col-lg-12">
		<div class="panel panel-default">
			<div id="tabela_container" class="panel-body dataTable_wrapper">
				<div class="row">
					<div class="col-sm-5">
						<div class="form-group">
							<label for="turma">Filtrar por Turma</label>
							<select size="1" id="turma" class="form-control" onchange="atualizar()">
								<option value="0">Todas</option>
								<% for (let i = 0; i < turmas.length; i++) { %>
									<option value="<%- turmas[i].id_turma %>"><%= turmas[i].desc_turma %></option>
								<% } %>
							</select>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

<div class="modal fade" tabindex="-1" role="dialog" id="modalExcluir">
	<div class="modal-dialog" role="document">
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal" aria-label="Fechar"><span aria-hidden="true">&times;</span></button>
				<h4 class="modal-title">Oops...</h4>
			</div>
			<div class="modal-body">
				<p>
					Tem certeza que deseja excluir o evento <span id="lblNome"></span>? Esta operação <b class="col-h">NÃO</b> pode ser desfeita, e <b class="col-h">TODAS AS RESPOSTAS</b> deste evento, de <b class="col-h">TODAS AS PESSOAS</b>, também serão <b class="col-h">EXCLUÍDAS</b>!
				</p>
				
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-danger" onclick="excluir()"><i class="fa fa-check"></i>Excluir</button>
				<button type="button" class="btn btn-outline btn-default" data-dismiss="modal"><i class="fa fa-times"></i>Cancelar</button>
			</div>
		</div>
	</div>
</div>

<%- contentFor("scripts") %>
<script type="text/javascript">
	//<![CDATA[
	"use strict";

	window.prepareCbSearchAllowLower = true;
	prepareCbSearch(document.getElementById("turma"));

	var trClicada, tabela, turmaAtual = 0;

	function criarTabela(dados) {
		$("#tabela_wrapper").remove();
		$("#tabela_container").append('<table class="table table-striped table-hover" id="tabela"></table>');

		tabela = prepareDataTable("tabela", {
			order: [[1, "asc"]],
			deferRender: true,
			columns: [
				{ title: "", "class": "col-min", searchable: false, orderable: false, data: "id_evento", render: function (v, type, row) { return "<a target=\"_blank\" title=\"Editar\" href=\"<%- root %>/evento/alterar?id_evento=" + row.id_evento + "\" class=\"btn btn-outline btn-primary\"><i class=\"fa fa-nomargin fa-edit\"></i></a> <button title=\"Excluir\" type=\"button\" data-excluir=\"1\" class=\"btn btn-outline btn-danger\"><i class=\"fa fa-nomargin fa-times\"></i></button>"; } },
				{ title: "Id", "class": "col-min text-right", "type": "number", data: "id_evento" },
				{ title: "Nome", render: encode, data: "nome_evento" },
				{ title: "Descrição", render: encode, data: "desc_evento" },
				{ title: "Turma", render: encode, data: "desc_turma" },
				{ title: "Sala", render: encode, data: "desc_sala" },
				{ title: "Professor", render: encode, data: "nome_prof" },
				{ title: "Início", "class": "col-min text-right", "type": "customdatetimeint", data: "inicio_evento" },
				{ title: "Término", "class": "col-min text-right", "type": "customdatetimeint", data: "termino_evento" }
			],
			data: dados,
			export: { title: "Eventos" }
		});

		$("#tabela").on("click", "tbody button", function () {
			if (JsonWebApi.active)
				return;

			var evento = tabela.row(trClicada = this.parentNode.parentNode).data();

			if (this.getAttribute("data-excluir")) {
				$("#lblNome").text(evento.nome_evento);
				$("#lblDescricao").text(evento.desc_evento);
				$("#lblTurma").text(turma.desc_turma);
				$("#lblSala").text(sala.desc_sala);
				$("#lblProfessor").text(prof.nome_prof);
				$("#lblInicio").text(evento.inicio_evento);
				$("#lblTermino").text(evento.termino_evento);

				$("#modalExcluir").modal({
					backdrop: "static",
					keyboard: true
				});
			}
		});
	}

	function excluir() {
		if (JsonWebApi.active || !trClicada)
			return;

		$("#modalExcluir").modal("hide");

		var evento = tabela.row(trClicada).data();

		Notification.wait();

		JsonWebApi.get("<%- root %>/api/evento/excluir", function (response) {
			if (response.success) {
				Notification.success("Evento excluído com sucesso! " + emoji.happy);
				tabela.row(trClicada).remove().draw();
			} else {
				Notification.error(response.value, true);
			}
			trClicada = null;
		}, "id_evento", evento.id_evento);
	}

	function atualizar() {
		var turma = parseInt($("#turma").val());
		if (turmaAtual === turma || JsonWebApi.active)
			return;

		JsonWebApi.get("<%- root %>/api/evento/listar", function (response) {
			if (response.success) {
				Notification.hide();
				turmaAtual = turma;
				criarTabela(response.value);
			} else {
				Notification.error(response.value, true);
			}
		}, "id_turma", turma);
	}

	criarTabela(<%- lista %>);
	//]]>
</script>
