<form method="post" action="<%- root %>/login">
	<div style="max-width: 400px; margin: 0 auto; padding: 5% 15px 50px;">
		<div class="panel panel-default no-margin-bottom">
			<div class="panel-body">
				<div class="col-xs-space-bottom" id="container-titulo">
					<h1 id="titulo-login">Agenda</h1>
					<!-- <p id="barra">|</p> -->
					<img alt="Agenda da Pós" id="logo-login" src="<%- root %>/imagens/logo-espm.png" style="max-width: 100%;" />
				</div>
				<% if (mensagem) { %>
				<div class="alert alert-danger"><%=mensagem %></div>
				<% } %>
				<a href="<%- ssoRedir %>" class="btn btn-primary btn-block">Login</a>
			</div>
		</div>
	</div>
</form>
