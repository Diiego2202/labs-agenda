<body class ="A4">
<section class="sheet" style="padding: 10px; margin: 0 auto">
    <div id="calendar" class="calendar"></div>
    <div class="container">
        <div class="row">
            <div class="col-md-6 ">
                <div id="legenda"></div>
            </div>
            <div class="col-md-6 ">
            </div>
        </div>
    </div>
    <button type="button" class="btn btn-primary" id="btnImprimir" onclick="window.print()"><i class="fa fa-print"></i> Imprimir / PDF</button>
</section>
<script type="text/javascript" src="<%- root %>/lib/bootstrap/js/bootstrap-1.0.1.min.js"></script>
<script type="text/javascript">
    "use strict";
    
    function criarDate(dataLocalDMY) {
        var partes = dataLocalDMY.split("/"),
            dia = parseInt(partes[0]),
            mes = parseInt(partes[1]),
            ano = parseInt(partes[2]);
        return new Date(ano, mes - 1, dia);
    }

    function gerarCalendario() {

        // https://www.bootstrap-year-calendar.com/#Documentation/Options
        var ocorrencias = <%- JSON.stringify(lista) %>,
            anoAtual = <%- anoAtual %>,
            dataSource = [],
            corAtual = 0,
            corPorId = {},
            htmlLegenda = "",
            cores = [
                "#04f",
                "#090",
                "#b46b17",
                "#f00",
                "#f8f",
                "#0ff",
                "#a0a",
                "#388",
                "#000",
                "#999",
                "#ccc",
                "#eb5",
                "#f70",
                "#9f4",
                "#07f",
                "#4db"
            ];

        ocorrencias.sort(function (a, b) { return a.id_aula - b.id_aula; });

        for (var i = 0; i < ocorrencias.length; i++) {
            var id_aula = ocorrencias[i].id_aula,
                corAula = corPorId[id_aula];

            if (!corAula) {
                corAula = cores[corAtual];
                corPorId[id_aula] = corAula;

                corAtual++;
                if (corAtual >= cores.length)
                    corAtual = 0;

                htmlLegenda += `<div><span class="item-legenda" style="background-color: ${corAula};"></span> ${ocorrencias[i].nome_aula} (${ocorrencias[i].carga_horaria} horas)</div>`;
            }

            var inicio_ocorrencia = criarDate(ocorrencias[i].inicio_ocorrencia),
                ocorrencia = {
                    name: ocorrencias[i].nome_aula,
                    desc_aula: ocorrencias[i].desc_aula,
                    startDate: inicio_ocorrencia,
                    endDate: inicio_ocorrencia,
                    color: corAula
                };
            dataSource.push(ocorrencia);
        }

        $("#legenda").html(htmlLegenda);

        $('#calendar').calendar({
            enableContextMenu: false,
            enableRangeSelection: false,
            mouseOnDay: function(e) {
                if(e.events.length > 0) {
                    var content = '';
                    
                    for(var i in e.events) {
                        content += '<div class="event-tooltip-content">'
                                        + '<div class="nome_aula" style="color:' + e.events[i].color + '">' + e.events[i].name + '</div>'
                                        + '<div class="desc_aula">' + e.events[i].desc_aula + '</div>'
                                    + '</div>';
                    }
                
                    $(e.element).popover({
                        trigger: 'manual',
                        container: 'body',
                        html:true,
                        content: content
                    });
                    
                    $(e.element).popover('show');
                }
            },
            mouseOutDay: function(e) {
                if(e.events.length > 0) {
                    $(e.element).popover('hide');
                }
            },
            dataSource: dataSource
            /*[
                {
                    id_aula: 0,
                    id_sala: 'Google I/O',
                    id_prof: 'Google I/O',
                    id_turma: 'San Francisco, CA',
                    nome_aula: 'San Francisco, CA',
                    desc_aula: 'San Francisco, CA',
                    nome_prof: 'San Francisco, CA',
                    carga_horaria: 'San Francisco, CA',
                    desc_sala: 'San Francisco, CA',
                    desc_turma: 'San Francisco, CA',
                    startDate: criarDate("30/09/2021"),
                    // startDate: new Date(inicio_aula.getYear(), inicio_aula.getMonth(), inicio_aula.getDate()),
                    endDate: criarDate("08/10/2021")
                },
                {
                    id_aula: 1,
                    id_sala: 'oi',
                    id_prof: 'Google I/O',
                    id_turma: 'San Francisco, CA',
                    nome_aula: 'San Francisco, CA',
                    desc_aula: 'San Francisco, CA',
                    nome_prof: 'San Francisco, CA',
                    carga_horaria: 'San Francisco, CA',
                    desc_sala: 'San Francisco, CA',
                    desc_turma: 'San Francisco, CA',
                    startDate: new Date(currentYear, 5, 28),
                    endDate: new Date(currentYear, 5, 29)
                }
            ]*/
        });
    }

    gerarCalendario();

</script>
</body>
</html>
