    <style type="text/css">
        #btnImprimir {
            position: fixed;
            left: 10px;
            top: 10px;
            box-shadow: 0 0.5mm 2mm rgba(0, 0, 0, 0.3);
        }

        @media print {
            body {
                background: #fff;
            }

            th.prev, th.next {
                color: #fff;
            }

            #btnImprimir {
                display: none;
            }
            
        }
        #legenda{
            background-color: #f2f2f2;
            margin-top: 20px;
            width: 50%;
            height: 300px;
        }
